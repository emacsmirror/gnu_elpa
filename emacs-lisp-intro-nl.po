msgid "Sample let Expression"
msgstr "Voorbeeld let expressie"

#. type: subsection
#: emacs-lisp-intro.texi:3658
#, no-wrap
msgid "Sample @code{let} Expression"
msgstr "Voorbeeld @code{let} expressie"

#. type: cindex
#: emacs-lisp-intro.texi:3659
#, no-wrap
msgid "Sample @code{let} expression"
msgstr "Voorbeeld @code{let} expressie"

#. type: cindex
